Public Sub FillProductInfo()
  Dim product As Result
  Dim brand As Result
  Dim category As Result
  
  
  product = Global.DBconn.Find("products", "id = &1", Global.selected_product_id)
  brand = Global.DBconn.Find("brands", "id = &1", product!brand)
  category = Global.DBconn.Find("types", "id = &1", product!category)
  
  Label8.text = category!item
  If brand.Available Then Label13.Text = brand!item
  Label14.text = product!description
  Label15.Text = product!partnum
  If product!image <> Null Then
  PictureBox1.Picture = Global.Scale_Picture(Load_picture(product!image), PictureBox1.Width, PictureBox1.Height, True)
Endif
  End 
  
